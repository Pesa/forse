ERLC = @ERLC@
ERL = @ERL@
ERLCFLAGS = -D debug @ERLCFLAGS@

PYUIC ?= pyuic4

BINDIR = ebin
INCDIR = include
SRCDIR = src

ERL_HEADERS := $(wildcard $(INCDIR)/*.hrl)
ERL_SOURCES := $(wildcard $(SRCDIR)/*.erl)

ifeq ($(V),1)
Q =
NQ = @:
else
Q = @
NQ = @echo
endif

.SUFFIXES: .beam .erl .py .ui

$(BINDIR)/%.beam: $(SRCDIR)/%.erl $(ERL_HEADERS)
	$(NQ) "compiling" $<
	$(Q) $(ERLC) -I $(INCDIR) $(ERLCFLAGS) -b beam -o $(BINDIR) $<

Ui_%.py: %.ui
	$(NQ) "generating" $@ "from" $<
	$(Q) $(PYUIC) -o $@ $<

all: $(addprefix $(BINDIR)/,$(notdir $(ERL_SOURCES:.erl=.beam)))

clean:
	rm -f $(BINDIR)/*.beam

distclean: clean
	rm -f aclocal.m4 config.log config.status Makefile
	rm -rf autom4te.cache

.PHONY: all clean distclean
