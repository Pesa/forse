ERLC = @ERLC@
ERL = @ERL@
ERLCFLAGS = -D debug @ERLCFLAGS@

PYRCC = @PYRCC@
PYUIC = @PYUIC@

BINDIR = ebin
INCDIR = include
SRCDIR = src

ERL_HEADERS := $(wildcard $(INCDIR)/*.hrl)
ERL_SOURCES := $(wildcard $(SRCDIR)/*.erl)
FORMS :=
RESOURCES := src/forse/icons.qrc

##########################################

ERL_OBJS := $(patsubst $(SRCDIR)/%.erl,$(BINDIR)/%.beam,$(ERL_SOURCES))
FORMS_OBJS := $(patsubst %.ui,Ui_%.py,$(FORMS))
RESOURCES_OBJS := $(patsubst %.qrc,%_rc.py,$(RESOURCES))

##########################################

ifeq ($(V),1)
Q =
NQ = @:
MAKE := $(MAKE)
else
Q = @
NQ = @echo
MAKE := $(MAKE) --no-print-directory
endif

first: all

.SUFFIXES: .beam .erl .py .qrc .ui

$(BINDIR)/%.beam: $(SRCDIR)/%.erl $(ERL_HEADERS)
	$(NQ) "compiling" $<
	$(Q) $(ERLC) -I $(INCDIR) $(ERLCFLAGS) -b beam -o $(BINDIR) $<

%_rc.py: %.qrc
	$(NQ) "generating" $@ "from" $<
	$(Q) $(PYRCC) -py2 -o $@ $<

Ui_%.py: %.ui
	$(NQ) "generating" $@ "from" $<
	$(Q) $(PYUIC) -o $@ $<

all: $(ERL_OBJS) $(FORMS_OBJS) $(RESOURCES_OBJS)

relazione:
	$(Q) cd doc/ && $(MAKE)

clean:
	$(NQ) "cleaning up ..."
	$(Q) rm -f *~
	$(Q) rm -f $(ERL_OBJS)
	$(Q) rm -f $(FORMS_OBJS) $(FORMS_OBJS:.py=.pyc) $(FORMS_OBJS:.py=.pyo)
	$(Q) rm -f $(RESOURCES_OBJS) $(RESOURCES_OBJS:.py=.pyc) $(RESOURCES_OBJS:.py=.pyo)
	$(Q) cd doc/ && $(MAKE) clean
	$(NQ) "cleanup done"

distclean: clean
	$(Q) rm -f aclocal.m4 config.log config.status Makefile
	$(Q) rm -rf autom4te.cache

.PHONY: all clean distclean first relazione
